CREATE INDEX pgrn_index ON memos USING pgroonga (content);
SET pgroonga.enable_custom_scan = on;
EXPLAIN (COSTS OFF)
SELECT id, content, pgroonga_score(tableoid, ctid)
  FROM memos
 WHERE content &@~ 'PGroonga OR Groonga'
 ORDER BY id;
